{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
            "cache": true
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
        "format": {
            "dependsOn": ["^format"]
        },
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
